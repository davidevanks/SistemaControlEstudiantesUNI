@model IEnumerable<SistemaControlEstudiantesUNI.ViewModels.Catalogos_VM>

@{
    ViewBag.Title = "ListarCatHijos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-md-offset-1">

    <h2>Categorias de catálogos </h2>

    <p>
        @Html.ActionLink("Crear Nuevo", "CreateHijo",null, new { @class = "btn btn-primary" })
    </p>
    <table id="table-uni" class="table  table-bordered table-hover table-uni">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.activo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.activo)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "EditHijo", new { id = item.id }) |
                        @Html.ActionLink("Ver Detalle", "DetailsHijo", new { id = item.id }) 
                      
                    </td>
                </tr>
            }
        </tbody>

    </table>
    <br />
    <div>
        @Html.ActionLink("Regresar a catalogos", "Index", null, new { @class = "btn btn-primary" })
    </div>
</div>