@model IEnumerable<SistemaControlEstudiantesUNI.ViewModels.Turnos_VM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-offset-1">
    <h2>Turnos</h2>

    <p>
        @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table id="table-uni" class="table  table-bordered table-hover table-uni">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nombre_turno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.horario_turno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.activo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre_turno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.horario_turno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.activo)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                        @Html.ActionLink("Ver Detalle", "Details", new { id = item.id })

                    </td>
                </tr>
            }
        </tbody>
    </table>

    </div>
